<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_marginStart="8dp"
              android:layout_marginTop="8dp"
              android:layout_marginBottom="16dp"
>
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content">

        <ImageView
                android:layout_width="45dp"
                tools:background="@color/colorPrimaryDark"
                android:layout_height="45dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="0dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/user_image_iv"
                android:contentDescription="@string/userprofileimage"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  tools:text="Carole"
                  android:textColor="@color/X333545"
                  android:fontFamily="@font/open_sans_semibold"
                  app:layout_constraintStart_toEndOf="@+id/user_image_iv"
                  android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="parent" android:id="@+id/user_name_tv" android:textSize="14sp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  tools:text="/@carol_landu"
                  android:textSize="13sp"
                  android:fontFamily="@font/open_sans"
                  android:textColor="@color/X9B9EB5"
                  app:layout_constraintStart_toStartOf="@+id/user_name_tv"
                  app:layout_constraintTop_toBottomOf="@+id/user_name_tv"
                  android:id="@+id/user_handle_tv"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  tools:text="Jan 15"
                  android:textSize="13sp"
                  android:fontFamily="@font/open_sans"
                  android:textColor="@color/X9B9EB5"
                  android:layout_marginStart="8dp"
                  app:layout_constraintStart_toEndOf="@+id/user_handle_tv"
                  app:layout_constraintTop_toBottomOf="@+id/user_handle_tv"
                  app:layout_constraintBottom_toTopOf="@+id/user_handle_tv" android:id="@+id/post_date_tv"/>

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_verified_tick"
                   app:layout_constraintTop_toBottomOf="@+id/user_name_tv"
                   app:layout_constraintBottom_toTopOf="@+id/user_name_tv"
                   app:layout_constraintStart_toEndOf="@+id/user_name_tv" android:layout_marginStart="2dp"
                   android:id="@+id/verified_iv"/>
        
    </android.support.constraint.ConstraintLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/X333545"
            tools:text="Watch the #SpiderManFarFromHome teaser trailer now. 7.5.19"
            android:id="@+id/tweet_content_tv"/>
    
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:layout_marginTop="8dp"
    >

        <ImageView
                android:layout_width="15dp"
                android:layout_height="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_refresh_69"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/imageView2"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  tools:text="3"
                  android:id="@+id/repost_count_tv"
                  android:textSize="12sp"
                  android:textColor="#667580"
                  android:fontFamily="@font/open_sans_semibold"
                  app:layout_constraintTop_toBottomOf="@+id/imageView2"
                  app:layout_constraintBottom_toTopOf="@+id/imageView2"
                  app:layout_constraintStart_toEndOf="@+id/imageView2"
                  android:layout_marginStart="12dp"
                  />


        <ImageView
                android:layout_width="15dp"
                android:layout_height="16dp"
                app:layout_constraintStart_toEndOf="@id/repost_count_tv"
                android:layout_marginStart="32dp"
                android:src="@drawable/ic_heart_2"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/imageView3"
                tools:layout_editor_absoluteX="48dp"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  tools:text="3"
                  android:textColor="#667580"
                  android:fontFamily="@font/open_sans_semibold"
                  android:id="@+id/fav_count_tv"
                  android:textSize="12sp"
                  app:layout_constraintTop_toBottomOf="@+id/imageView3"
                  app:layout_constraintBottom_toTopOf="@+id/imageView3"
                  app:layout_constraintStart_toEndOf="@+id/imageView3"
                  android:layout_marginStart="12dp"/>


    </android.support.constraint.ConstraintLayout>

</LinearLayout>